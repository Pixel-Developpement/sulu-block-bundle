<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>page_block_settings</key>
    <properties>
        <property name="animation" type="single_select">
            <meta>
                <title lang="fr">Animation</title>
            </meta>
            <params>
                <param name="default_value" value="fade"/>
                <param name="values" type="collection">
                    <param name="fade">
                        <meta>
                            <title lang="fr">Fade</title>
                        </meta>
                    </param>
                    <param name="slide-up">
                        <meta>
                            <title lang="fr">Apparition vers le haut</title>
                        </meta>
                    </param>
                    <param name="slide-down">
                        <meta>
                            <title lang="fr">Apparition vers le bas</title>
                        </meta>
                    </param>
                    <param name="slide-left">
                        <meta>
                            <title lang="fr">Apparition vers la gauche</title>
                        </meta>
                    </param>
                    <param name="slide-right">
                        <meta>
                            <title lang="fr">Apparition vers la droite</title>
                        </meta>
                    </param>
                    <param name="zoom-in">
                        <meta>
                            <title lang="fr">Augmenter le zoom</title>
                        </meta>
                    </param>
                    <param name="zoom-out">
                        <meta>
                            <title lang="fr">Diminuer le zoom</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>
        <property name="animation_duration" type="number">
            <meta>
                <title lang="fr">Dur√©e</title>
            </meta>
            <params>
                <param name="min" value="200"/>
                <param name="max" value="2000"/>
                <param name="step" value="100"/>
            </params>
        </property>
    </properties>
</form>
