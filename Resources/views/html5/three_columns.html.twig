                        {{ get_image(resolved_image|default, defaultFormat, {
                            '(max-width: 991px)': mobileFormat,
                        }) }}
                    {% endset %}
                    {{ image }}
                    {% if block['title_three'] is defined and block['title_three'] is not empty %}
