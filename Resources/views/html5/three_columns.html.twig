{% extends '@Block/html5/base.html.twig' %}

{% block section_content %}
    {% set defaultFormat = 'before_after' %}
    <div class="columns-container">
        {% block title %}
            {% if block['title'] is defined and block['title'] is not empty %}
                <div class="title">
                    <h2>{{ block['title'] }}</h2>
                </div>
            {% endif %}
        {% endblock %}
        {% block column_one %}
            <div class="column">
                <div class="column-content">
                    {% set resolved_image = (blockview) ? block['image_one'] : sulu_resolve_media(block['image_one']['id'], app.request.locale) %}
                    {% set image %}
                        {% set defaultFormat = 'column' %}
                        {% set mobileFormat = 'column_mobile' %}
                        {{ get_image(resolved_image|default, defaultFormat, {
                            '(max-width: 991px)': mobileFormat,
                        }) }}
                    {% endset %}
                    {{ image }}
                    {% if block['title_one'] is defined and block['title_one'] is not empty %}
                        <h3>{{ block['title_one'] }}</h3>{% endif %}
                    {% if block['text_one'] is defined and block['text_one'] is not empty %}
                        <div class="content">{{ block['text_one']|raw }}</div>
                    {% endif %}
                </div>
            </div>
        {% endblock %}
        {% block column_two %}
            <div class="column">
                <div class="column-content">
                    {% set resolved_image = (blockview) ? block['image_two'] : sulu_resolve_media(block['image_two']['id'], app.request.locale) %}
