                    {{ image }}
                    {% if block['title_two'] is defined and block['title_two'] is not empty %}
                        <h3>{{ block['title_two'] }}</h3>{% endif %}
                    {% if block['text_two'] is defined and block['text_two'] is not empty %}
                        <div class="content">{{ block['text_two']|raw }}</div>
                    {% endif %}
                </div>
            </div>
        {% endblock %}
        {% block column_three %}
            <div class="column">
                <div class="column-content">
                    {% set resolved_image = (blockview) ? block['image_three'] : sulu_resolve_media(block['image_three']['id'], app.request.locale) %}
